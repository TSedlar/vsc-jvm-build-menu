{
    "name": "vsc-pom-install-menu",
    "displayName": "POM Install Menu",
    "description": "Right click a POM for an install menu",
    "version": "1.0.0",
    "license": "MIT",
    "icon": "images/icon-128.png",
    "dependencies": {
        "typescript": "^2.5.2",
        "vscode": "^1.1.5"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tsedlar/vsc-pom-install-menu"
    },
    "private": false,
    "bugs": {
        "email": "sedlarizona@gmail.com",
        "url": "https://github.com/tsedlar/vsc-pom-install-menu/issues"
    },
    "publisher": "sedarity",
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.installPOM"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.installPOM",
                "title": "Install POM"
            }
        ],
        "menus": {
            "explorer/context": [{
                "when": "resourceLangId == xml",
                "command": "extension.installPOM",
                "group": "PomInstall@1"
            }]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.2",
        "vscode": "^1.1.5",
        "@types/node": "^8.0.26"
    }
}
